{
  "manifest_version": 3,
  "name": "Civitai Helper",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "256": "icon.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },  
  "content_scripts": [
  {
    "matches": ["https://civitai.com/*", "https://huggingface.co/*", "https://civitai.tech/*"],
    "js": ["content.js"],
    "css": ["content.css"]
  }
  ],
  "web_accessible_resources": [
  {
    "resources": ["icon2.png", "icon.png"],
    "matches": ["https://civitai.com/*", "https://huggingface.co/*", "https://civitai.tech/*"]
  }
]
}